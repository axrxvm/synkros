# Server Configuration
NODE_ENV=development # OR production
PORT=3000

# Security & CORS
ALLOWED_CLIENTS=


# Email Configuration
SMTP_HOST=
SMTP_PORT=465
MAIL_USER=
MAIL_PASSWORD=

# Cloudflare Turnstile (required for verification)
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# Application
APP_BASE_URL=
